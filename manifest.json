{
  "manifest_version": 3,
  "name": "AI Prompt Enhancer",
  "version": "1.0.0",
  "description": "Enhance your AI prompts using LangChain and Groq's Llama-3.3-70b model.",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.groq.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "options_page": "options/options.html"
} 